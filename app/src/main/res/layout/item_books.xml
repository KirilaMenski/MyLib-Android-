<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_book_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="@dimen/xxdd_size"
        android:layout_height="@dimen/xxl_size"
        android:layout_margin="@dimen/l_dimen"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_book_image"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/book_cover"
        android:background="@color/bookshelves"/>

</LinearLayout>